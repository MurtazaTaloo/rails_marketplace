<h1>User Profile:<h1>
<%= current_user.name %>
<%= current_user.email %>
<%= current_user.address %>
<%= current_user.rating %>
<%= @purchases.length %>
<%= @sold_listings.length %>
<% if @sales != nil %>
  <%= @sales.sum %>
<% end %>
</br></br>



<h1>Current Listings:<h1>
<% @current_listings.each do |l| %>
  <% if l != nil %>
    <%= l.title %></br>
    <%= l.description %></br>
    <%= l.price %></br>
  <% end %>
<% end %>
</br></br>



<h1>Purchases:<h1>
<% @purchases.each do |listing| %>
  <%= listing.title %>
  <%= listing.description %>
  <%= listing.price %></br>
  <% listing.pictures.each do |pic| %>
    <%= image_tag  pic,class:"show-image", class:"index-pix" %>
  <% end %></br>
  <%= link_to "Rate the seller of this listing", profiles_user_profile_rate_seller_path(user: listing.user) %>
<% end %>

</br></br>



<h1>Sold Listings:<h1>
<% @sold_listings.each do |listing|%>
  <%= listing.title %>
  <%= listing.description %>
  <%= listing.price %></br>
  <% listing.pictures.each do |pic| %>
    <%= image_tag  pic,class:"show-image", class:"index-pix" %>
  <% end %></br>
<% end %>